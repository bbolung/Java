package ch04.ex01;

import java.util.Scanner;

public class ForExample04 {

	public static void main(String[] args) {
		/*
		 * 키보드 숫자 입력 받는다.
		 * 5 	--> 1~5 누적합 15 출력
		 * 10 	--> 1~10 누적합 55 출력
		 * 100  --> 1~100 누적합 5050
		 */
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("숫자 입력: ");
		int num = sc.nextInt();
		int sum = 0; 	//sum값 초기화(sum=0) -> 에러발생X
		
		for(int i=1; i<=num; i++) {
			sum += i;
		}
		
		System.out.println("누적합: " + sum);
	}

}
