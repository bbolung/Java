package ch04.ex01;

public class WhileExample04 {

	public static void main(String[] args) {
		/*
		 * 구구단 출력
		
			for(int i=2; i<=9; i++) {
				System.out.printf("****%d단****\n", i);
				for(int j=1; j<=9; j++) {
					System.out.printf("%d x %d = %d\n", i, j, i*j);
				}
				System.out.println();
		 */
		
		int i=2;
		
		while(i<=9) {
			int j=1;		//꼭 이자리에 int j=1; 있어야 함. 적어도 j=1; 이라도 있어야 구구단 출력
			System.out.printf("****%d단****\n", i);
			while(j<=9) {
				System.out.printf("%d x %d = %d\n", i, j, i*j);
				j++;
			}
			System.out.println();
			
			i++;
		}
		
	}

}
