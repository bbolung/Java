package ch04.ex01;

public class WhileExample05 {

	public static void main(String[] args) {
		
		/*
		 * 조건식 없는 상태로 실행 -> 조건이 없으니까 항상 참 => 무한반복
		 * for(; ; ) {
			System.out.println("for문");
			}
			
		 * int cnt=0;
		
			while(true) {
				System.out.println(cnt);
			}
		 */
		
		int count=0;
		for(; ; count++) {
			if(count>100) break;
			
			System.out.println(count);
		}
		System.out.println();
		
		int cnt=0;
		
		while(true) {
			cnt++;
			if(cnt>100) break;
			System.out.println(cnt);
		}
		
	}

}
